@inherits EmployeeRowBase

@{ 
    var cssClass = Employee.HasPremiumBenefits ? "table-success" : "";
}
<tr class="cssClass">
    <td><img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{Employee.EmployeeId}-small.jpg")" class="rounded-circle" /></td>
    <td>@Employee.EmployeeId</td>
    <td>@Employee.FirstName</td>
    <td>@Employee.LastName</td>
    <td>
        <a href="@($"employeedetail/{Employee.EmployeeId}")" class="btn btn-primary ">
            <i class="fas fa-info-circle"></i>
        </a>
        <a href="@($"employeeedit/{Employee.EmployeeId}")" class="btn btn-primary ">
            <i class="fas fa-edit"></i>
        </a>
        <div class="btn btn-primary table-btn" @onclick="e => Employee.ShowBenefits = !Employee.ShowBenefits">
            <i class="fas fa-comment-dollar"></i>
        </div>
    </td>
</tr>

@if (Employee.ShowBenefits)
{
    <tr>
        <td colspan="5">
            <BenefitSelector @key="Employee" Employee="Employee" OnPremiumToggle="PremiumToggle"></BenefitSelector>
        </td>
    </tr>
} 